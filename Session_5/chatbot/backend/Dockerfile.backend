FROM python:3.10-slim

WORKDIR /app

# Install rye for dependency management
RUN pip install rye

COPY pyproject.toml /app/

# Install dependencies via rye
RUN rye sync

# Install SQLite support for Python
RUN apt-get update && apt-get install -y sqlite3 libsqlite3-dev

COPY . /app

EXPOSE 8000

CMD ["rye", "run", "uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
